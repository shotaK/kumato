{
  "manifest_version": 3,
  "name": "Kumato - Pomodoro Productivity extension",
  "version": "1.0",

  "description": "Flexible and customizable Pomodoro productivity extension",
  "action": {
    "default_icon": "icon_48.png",
    "default_popup": "popup.html"
  },

  "author": "Shota",
  "short_name": "Kumato",
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },

  "permissions": ["tabs", "storage", "notifications", "background"],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
